@model DryAgentSystem.Models.SearchParameters

@{
    ViewBag.Title = "Invoice";
    Layout = "~/Views/Shared/SearchAndGridLayout.cshtml";

}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/bundles/jqgrid")
@Styles.Render("~/Content/cssjqryUi")
<script src="~/JQuery/Invoice.js"></script>

@using (Html.BeginForm("Invoice", "Invoice", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form_group">
            <div class="row">
                <div class="col-md-12">
                    <h2>Invoice</h2>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <input type="submit" name="submit" id="Search" value="Search" class="btn btn-warning" />
                </div>
                <div class="col-md-1">
                    <input type="submit" name="submit" id="Reset" value="Reset" class="btn btn-info" />
                </div>
            </div>
            <div class="row" style="margin-top: 20px;">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.InvoiceNo, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.InvoiceNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InvoiceNo, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.JobRef, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.JobRef, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.JobRef, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.Status, new SelectList(ViewBag.statuslist, "Text", "Text"),
                                 "Select Status", new { @class = "btn btn-primary dropdown-toggle ForDropdownTheme", @id = "statusDropDownList" })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.LoadPort, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.LoadPort, new SelectList(ViewBag.PortList, "Port", "Port"),
                        "Select Port", new { @class = "btn btn-primary dropdown-toggle ForDropdownTheme", @id = "loadportDropDownList" })
                    @Html.ValidationMessageFor(model => model.LoadPort, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(model => model.DischargePort, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.DischargePort, new SelectList(ViewBag.PortList, "Port", "Port"),
                        "Select Port", new { @class = "btn btn-primary dropdown-toggle ForDropdownTheme", @id = "dischportDropDownList" })
                    @Html.ValidationMessageFor(model => model.DischargePort, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-1"></div>
            </div>
        </div>
    </div>

}
<br />
<table id="InvoiceGrid" class="overflow:auto;">
</table>
<div id="InvoicePager" style="text-align: center;">
</div>


