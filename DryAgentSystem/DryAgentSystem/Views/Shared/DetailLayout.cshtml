@{
    ViewBag.Title = "DetailLayout";
}

@RenderSection("scripts", required: false)
<link rel="stylesheet" href="~/Content/Site.css">

@{
    string CurrentControllerName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);

    <div>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-fixed-top" id="navigationbar">
            <a class="navbar-brand" href="@Url.Action("Home","Home")" id="logo"><img src="~/Content/Img/LegendLogoWhiteNew.png" class="responsiveimg" alt=""></a>
            <div class="container">
                <ul class="navbar-nav" id="navigationli">
                    @if (User.Identity.IsAuthenticated)
                    {
                        switch (CurrentControllerName)
                        {
                            case "RateRequestDetails":
                                <li>@Html.ActionLink("CREATE RATE REQUEST", "RateRequestDetails", "RateRequestDetails")</li>
                                <li>@Html.ActionLink("RATE REQUEST", "RateRequest", "RateRequest")</li>
                                break;
                            case "QuotationDetails":

                                <li>@Html.ActionLink("QUOTATION", "Quotation", "Quotation")</li>

                                break;
                            case "BookingDetails":
                                <li>@Html.ActionLink("BOOKING", "Booking", "Booking")</li>
                                break;
                            case "ShipmentDetails":
                                <li>@Html.ActionLink("SHIPMENT", "Shipment", "Shipment")</li>
                                break;
                            case "InvoiceDetails":
                                <li>@Html.ActionLink("Invoice", "Invoice", "Invoice")</li>
                                break;
                            case "DischargePlanDetails":
                                <li>@Html.ActionLink("IMPORT", "ImportDocument", "ImportDocument")</li>
                                <li>@Html.ActionLink("DISCHARGE PLAN", "DischargePlan", "DischargePlan")</li>
                                break;
                            case "DeliveryOrderDetails":
                                <li>@Html.ActionLink("DELIVERY ORDER", "DeliveryOrder", "DeliveryOrder")</li>
                                break;
                            case "AgentAddressBookDetails": 
                                <li> @Html.ActionLink("ADD NEW", "AgentAddressBookDetails", "AgentAddressBookDetails") </li>
                                <li>@Html.ActionLink("ADDRESS BOOK", "AgentAddressBook", "AgentAddressBook")</li>
                                break;
                            default:
                                Layout = "~/C/Shared/Layout.cshtml";
                                break;
                        }
                    }

                </ul>
                <ul class="navbar-nav navigationright">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="#">HELLO, <!--@Session["fname"]-->@User.Identity.Name</a></li>

                        <li>@Html.ActionLink("LOGOUT", "Logout", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("LOGIN", "Login", "Login")</li>
                    }
                </ul>
            </div>
        </nav>
    </div>
}
<br>
<div class="container body-content" id="content">
    @RenderBody()
</div>

