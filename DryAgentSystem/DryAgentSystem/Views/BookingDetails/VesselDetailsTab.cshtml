                    <span class="RequiredAstrik">*</span>
                </div>
                <div class="col-md-3">
                    @Html.RadioButtonFor(model => model.TransportMode, "Seaways", htmlAttributes: new { @id = "TransportSeaways" })
                    Seaways  &nbsp;&nbsp;&nbsp;
                    @Html.RadioButtonFor(model => model.TransportMode, "Trucking", htmlAttributes: new { @id = "TransportTrucking" })
